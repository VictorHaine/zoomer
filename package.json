{
  "name": "zoomer",
  "displayName": "zoomer",
  "description": "zoomer",
  "version": "0.0.4",
  "publisher": "anthonyattard",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:zoomer.helloWorld",
    "onCommand:zoomer.zoomIns",
    "onCommand:zoomer.zoomOuts"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zoomer.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "zoomer.zoomIns",
        "title": "zoomer.zoomIns"
      },
      {
        "command": "zoomer.zoomOuts",
        "title": "zoomer.zoomOuts"
      }
    ],
    "configuration": {
      "properties": {
        "zoomer.zoomIncrement": {
          "type": "number",
          "default": 0.1,
          "description": "Zoom level value when incrementing/decrementing (can accept decimals)"
        }
      },
      "title": "Zoomer Zoom Settings"
    }
  },
  "scripts": {
    "compile-run": "npm run compile",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test-compile": "tsc -p ./",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "esbuild": "^0.14.31",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^9.2.2",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1"
  }
}
